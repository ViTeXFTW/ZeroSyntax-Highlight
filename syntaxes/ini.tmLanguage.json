{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Ini",
	"patterns": [
		{
			"include": "#inline-comment"
		},
		{
			"include": "#keyword"
		}
	],
	"repository": {
		"keyword": {
			"patterns": [{
				"begin": "\\b(MappedImage|Object|Locomotor|Armor|CommandButton|CommandSet|FXList|AudioEvent|ObjectCreationList|ParticleSystem|PlayerTemplate|Rank|Science|SpecialPower|DialogEvent|Upgrade|Weapon|Weather)\\s([a-zA-Z]\\w+)",
				"beginCaptures": {
					"1": {
						"name": "keyword.control.ini"
					},
					"2": {
						"name": "entity.name.type.ini"
					}
				},
				"end": "\\s*\\b(End)\\b",
				"endCaptures": {
					"1": {
						"name": "keyword.control.ini"
					}
				},
				"patterns": [
					{
						"include": "#addmodule-block"
					},
					{
						"include": "#inline-removemodule"
					},
					{
						"include": "#assignment"
					},
					{
						"include": "#inline-comment"
					}
				]
			}]
		},
		"addmodule-block": {
			"begin": "\\s*\\b(AddModule)\\b",
			"beginCaptures": {
				"1": {
					"name": "keyword.control.ini"
				}
			},
			"end": "\\s*\\b(End)\\b",
			"endCaptures": {
				"1": {
					"name": "keyword.control.ini"
				}
			},
			"patterns": [
				{
					"include": "#assignment"
				},
				{
					"include": "#inline-comment"
				}
			]
		},
		"inline-removemodule": {
			"match": "\\s*\\b(RemoveModule)\\b\\s*([a-zA-Z]\\w+)",
			"captures": {
				"1": {
					"name": "keyword.control.ini"
				},
				"2": {
					"name": "storage.type.ini"
				}
			}
		},
		"assignment": {
			"begin": "(^[ \\t]+)?([a-zA-Z]\\w+)\\s*(\\=)\\s*",
			"beginCaptures": {
				"2": {
					"name": "variable.parameter"
				},
				"3": {
					"name": "punctuation.whitespace.ini"
				}
			},
			"end": "(?!\\G)",
			"patterns": [
				{
					"include": "#string"
				},
				{
					"include": "#numbers"
				},
				{
					"include": "#inline-comment"
				}
			]
		},
		"string": {
			"begin": "(^[ \\t]+)?(?=[a-zA-Z])",
			"beginCaptures": {
				"1": {
					"name": "punctuation.whitespace.ini"
				}
			},
			"end": "(?!\\G)",
			"patterns": [
				{
					"match": "[a-zA-Z][\\w]*",
					"name": "string.unquoted.ini"
				}
			]
		},
		"doublequoted-strings": {
			"name": "string.quoted.double.ini",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ini",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"begin": "(^[ \\t]+)?(?=\\d)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.whitespace.ini"
				}
			},
			"end": "(?!\\G)",
			"patterns": [
				{
					"match": "\\d[\\.\\d]*",
					"name": "constant.numeric.ini"
				}
			]
		},
		"inline-comment": {
			"begin": "(^[ \\t]+)?(?=;)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.whitespace.ini"
				}
			},
			"end": "(?!\\G)",
			"patterns": [
				{
					"begin": ";",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.comment.ini"
						}
					},
					"end": "\\n",
					"name": "comment.line.ini"
				}
			]
		}
	},
	"scopeName": "source.ZH-HiLi"
}